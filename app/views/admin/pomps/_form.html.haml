= semantic_form_for [:admin, @pomp]  do |f|
  = f.semantic_errors *f.object.errors.keys
  -[:title, :description, :price].each do |attr|
    = f.inputs attr.to_s.capitalize! do
      = f.input attr, label: false
  = f.inputs 'Image' do
    = f.file_field :image, label: false
    %br
    = render 'partials/image', item: @pomp
  = f.inputs 'SEO' do
    = f.input :seo_title, label: 'SEO Title'
    = f.input :seo_description, label: 'SEO Description'
    = f.input :seo_keywords, label: 'SEO Keywords'

  = f.actions
