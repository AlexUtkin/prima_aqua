:javascript
  ymaps.ready(init);
  function init () {
    var myMap = new ymaps.Map('contacts-body-map', {
      center: [60.230488, 30.302889],
      zoom: 7.7
      }),
      office = new ymaps.Placemark([59.945188, 30.441219], {
        hintContent: ''
      }, {
        // Опции.
        // Необходимо указать данный тип макета.
        iconLayout: 'default#image',
        // Своё изображение иконки метки.
        iconImageHref: '/assets/office.png',
        // Размеры метки.
        iconImageSize: [30, 42],
        // Смещение левого верхнего угла иконки относительно
        // её "ножки" (точки привязки).
        iconImageOffset: [-3, -42]
      }),
      prod = new ymaps.Placemark([60.3840644, 30.2405383], {
        hintContent: ""
      }, {
        // Опции.
        // Необходимо указать данный тип макета.
        iconLayout: 'default#image',
        // Своё изображение иконки метки.
        iconImageHref: '/assets/prod.png',
        // Размеры метки.
        iconImageSize: [30, 42],
        // Смещение левого верхнего угла иконки относительно
        // её "ножки" (точки привязки).
        iconImageOffset: [-3, -42]
      });

    myMap.geoObjects.add(office);
    myMap.geoObjects.add(prod);
    myMap.controls.add("zoomControl");
  }

