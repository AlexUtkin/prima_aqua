= semantic_form_for [:admin, @aqua_post]  do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs 'Aqua' do
    = f.input :aqua_id, label: false, as: :select, collection: Aqua.all.map{|a| ["#{a.name}", a.id]}
  = f.inputs 'Text color' do
    = f.input :text_color, label: false, as: :select, collection: [['black', '#333'], ['white', '#fff']]
  = f.inputs 'Title' do
    = f.input :title, label: false
  = f.inputs 'Position' do
    = f.input :position, label: false
  = f.inputs 'Description' do
    = f.input :body, label: false
  = f.inputs 'Button' do
    = f.input :button_name, label: 'name'
    = f.input :hint, label: 'hint'
    = f.input :button_image, label: 'image'
    %br
    - if @aqua_post.persisted? && @aqua_post.button_image.present?
      = image_tag(@aqua_post.button_image_url((:button_image_square if @aqua_post.image.version_exists?(:button_image_square))))
  = f.inputs 'Link' do
    = f.input :link_name, label: 'name'
    = f.input :link_url, label: 'url'
  = f.inputs 'Image' do
    = f.file_field :image, label: false
    %br
    = render 'partials/image', item: @aqua_post

  = f.inputs 'SEO' do
    = f.input :seo_title, label: 'SEO Title'
    = f.input :seo_description, label: 'SEO Description'
    = f.input :seo_keywords, label: 'SEO Keywords'
  = f.actions
