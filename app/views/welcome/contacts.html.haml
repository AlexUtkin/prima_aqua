- title 'Prima aqua - доставка воды Санкт-Петербург и Ленинградская область. Контакты'
- meta_description 'Контактные данные Prima-Aqua. Телефон. Адрес'
- meta_keywords 'контактные данные, телефон, адрес'
= javascript_include_tag 'http://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU'
.contacts-body
  .contacts-body-title
    Контакты
  #contacts-body-map
  .contacts-body-blocks
    .contacts-body-blocks-item
      .contacts-body-blocks-item-title
        .contacts-body-blocks-item-title-img
          = image_tag 'item_office.png'
        .contacts-body-blocks-item-title-text
          Офис
      .contacts-body-blocks-item-body
        .contacts-body-blocks-item-body-text
          Тел.: (812) 335-40-80
          %br
          195248, г. Санкт-Петербург, ул. Партизанская, д.25
          %br
          Эл. почта:
          %span lider-aqva@metropost.ru
    .contacts-body-blocks-item
      .contacts-body-blocks-item-title
        .contacts-body-blocks-item-title-img
          = image_tag 'item_prod.png'
        .contacts-body-blocks-item-title-text
          Производство
      .contacts-body-blocks-item-body
        .contacts-body-blocks-item-body-text
          Тел.: (812) 587-24-11
          %br
          Ленинградская область,
          %br
          Поселок Стеклянный



:javascript
  ymaps.ready(init);
  function init () {
    var myMap = new ymaps.Map('contacts-body-map', {
      center: [60.230488, 30.302889],
      zoom: 7.7
      }),
      office = new ymaps.Placemark([59.969037, 30.367005], {
        hintContent: ''
      }, {
        // Опции.
        // Необходимо указать данный тип макета.
        iconLayout: 'default#image',
        // Своё изображение иконки метки.
        iconImageHref: '/assets/office.png',
        // Размеры метки.
        iconImageSize: [30, 42],
        // Смещение левого верхнего угла иконки относительно
        // её "ножки" (точки привязки).
        iconImageOffset: [-3, -42]
      }),
      prod = new ymaps.Placemark([60.3840644, 30.2405383], {
        hintContent: ""
      }, {
        // Опции.
        // Необходимо указать данный тип макета.
        iconLayout: 'default#image',
        // Своё изображение иконки метки.
        iconImageHref: '/assets/prod.png',
        // Размеры метки.
        iconImageSize: [30, 42],
        // Смещение левого верхнего угла иконки относительно
        // её "ножки" (точки привязки).
        iconImageOffset: [-3, -42]
      });

    myMap.geoObjects.add(office);
    myMap.geoObjects.add(prod);
    myMap.controls.add("zoomControl");
  }

