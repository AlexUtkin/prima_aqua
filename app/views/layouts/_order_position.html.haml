.water_template.js_product_item
  .aqua_select.js_aqua_select.select_aqua
    - water_options = options_for_select(@all_aquas.map{ |aqua| [aqua.name, "#{aqua.id}-#{aqua.name}"] })
    = select_tag( :auqa, water_options, { class: 'js-aqua-select-tag'})
  - if @all_aquas.present?
    .volume_select.js_volume_select.select_volume
      - volume_options = options_for_select(@volumes.map{ |v| [v.title_value, "#{v.id}-#{v.title_value}"]})
      = select_tag( :volume, volume_options, {class: 'js-volume-select-tag'})
  .amount.js_amount
    %button.js_increment.button_minus{data: { step: -1, product: 'aqua' }}
      = '-'
    %input{ value: 2, disabled: true, class: 'js_amount_input' }
    %button.js_increment.button_plus{data: { step: 1, product: 'aqua' }}
      +
  .remove_button.js_remove_position
    x
  .price.js_price
    %span.js_price_value= @aqua_price
    %span.js_currency{ class: ('hidden_block' if @aqua_price.to_i == 0)}
      ла
  .deposit.js_deposit.hidden_block
    = @deposit
  .clearfix
