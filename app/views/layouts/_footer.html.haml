.footer
  .footer__adv
    %a{ href: 'http://td-voda.ru/market/korma_dlya_zhivotnyh/' }
      = image_tag image_url('bone.png')
      %span
        Попробуйте наш сервис доставки кормов для животных
  .footer__main
    .footer__main__links
      .links_column
        - @all_aquas.each do |aqua|
          = link_to aqua.name, aqua
      .links_column
        = link_to 'Кулеры и помпы', coolers_path
        = link_to 'Сопутствующие товары', products_path(type: 'cup')
        = link_to 'Обслуживание', page_content_path('service')
        -#= link_to 'Вопросы и ответы', '#'
      .links_column
        -@all_delivery_pages.each do |page|
          = link_to page.title, page
      .links_column
        = link_to 'Партнеры', page_content_path('partners')
        = link_to 'Сотрудничество', page_content_path('collaboration')
        = link_to 'О компании', about_path
        = link_to 'Контакты', '/contacts'
        -#= link_to 'Партнеры', '#'
        -#= link_to 'Сотрудничество', '#'
    .footer__main__info
      .info_column
        = image_tag image_url('car.jpg')
        .info_column__content.lft_mrgn
          %span.bold_footer_info
            Доставка воды:
          %span
            Пн, Ср, Чт с 08 до 17 и с 18 до 22
          %span
            Вт, Пт, Сб с 08 до 17
      .info_column
        = image_tag image_url('phone.jpg')
        .info_column__content
          %span.bold_footer_info
            Заказы принимаются:
          %span
            С понедельника по пятницу
          %span
            с 8 до 20 часов
          %span
            В субботу с 9 до 15:00
      .info_column__right
        .contacts
          = link_with_tab 'https://vk.com/prima_aqua' do
            - image_tag image_url('vk.png')
          = link_with_tab 'http://ok.ru/group/53548676022526' do
            - image_tag image_url('ok.png')
          = link_with_tab 'https://www.facebook.com/pages/%D0%9F%D1%80%D0%B8%D0%BC%D0%B0-%D0%90%D0%BA%D0%B2%D0%B0/1665851863648322?fref=ts' do
            - image_tag image_url('fb.png')
          = link_with_tab 'https://instagram.com/prima_aqua/' do
            - image_tag image_url('in.png')
          %span.contacts__phone
            (812) 335-40-80

