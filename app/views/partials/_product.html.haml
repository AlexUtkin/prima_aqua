.product{ class: "js#{product.class.to_s}" }
  .product__image
    = image_tag product.image_url(:order_small)
  .product__title
    = product.title
  .product__price
    = product.price
  .add_to_card
    %a.blue_button.js_add_product{data: {type: product.type, id: "#{product.id}-#{product.class.to_s}", amount: 1, title: product.title, price: product.price }}
      Добавить в заказ
